    <h2>Clients</h2>
    <ul class="clients">

        <% for(let i = 0; i < clients.length; i++){%>
            <li class="client">
                <span><%= i %></span>:
                <span><%= clients[i].name %></span>,
                <span><%= clients[i].address %></span>
            </li>
       <% } %>
    </ul>



    <script src="/main.js"></script>
</body>
</html>